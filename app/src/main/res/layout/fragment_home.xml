<FrameLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E9EBEE"
    tools:context="solomonkey.informatics.Fragment_Home">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.synnapps.carouselview.CarouselView
                android:id="@+id/carouselView"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                app:fillColor="#FFFFFFFF"
                app:pageColor="#00000000"
                app:radius="4dp"
                app:slideInterval="3000"
                app:strokeColor="#FF777777"
                app:strokeWidth="1dp"/>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <!--Welcome-->
                <LinearLayout
                    android:background="@drawable/card"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textColor="@color/fontColor"
                        android:textSize="@dimen/home_titlefont_size"
                        android:text="Welcome"
                        android:textAlignment="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:gravity="center"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:paddingBottom="8dp"
                        android:text="@string/welcometext1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>
                <!--About Us-->
                <LinearLayout
                    android:background="@drawable/card"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textColor="@color/fontColor"
                        android:textSize="@dimen/home_titlefont_size"
                        android:text="About Us"
                        android:textAlignment="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:text="Informatics Group"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:textAlignment="center"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:paddingBottom="8dp"
                        android:paddingTop="4dp"
                        android:text="@string/abiutUstext1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <!--Vision and Mission-->
                <LinearLayout
                    android:background="@drawable/card"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textColor="@color/fontColor"
                        android:textSize="@dimen/home_titlefont_size"
                        android:text="Vision and Mission"
                        android:textAlignment="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:padding="8dp"
                        android:gravity="center"
                        android:text="@string/visionandmissiontext"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <!--Courses-->
                <LinearLayout
                    android:background="@drawable/card"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="Courses/Programs"
                        android:textColor="@color/fontColor"
                        android:textSize="@dimen/home_titlefont_size"
                        android:textAlignment="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:padding="8dp"
                        android:gravity="center"
                        android:text="@string/visionandmissiontext"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/course_learnmore"
                        android:textColor="@color/fontColor"
                        android:paddingRight="6dp"
                        android:paddingBottom="8dp"
                        android:text="Learn More >"
                        android:layout_gravity="end"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <!--Locations (MAP)-->
                <LinearLayout
                    android:background="@drawable/card"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textColor="@color/fontColor"
                        android:textSize="@dimen/home_titlefont_size"
                        android:text="Locations"
                        android:textAlignment="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <FrameLayout
                        android:id="@+id/map_container"
                        android:layout_margin="8dp"
                        android:layout_width="match_parent"
                        android:layout_height="300dp"></FrameLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </ScrollView>


</FrameLayout>
